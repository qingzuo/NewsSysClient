<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FF0000" >

    <android.support.v4.view.ViewPager
        android:id="@+id/imagePager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#00FF0000"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FF0000"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/imageNewsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="印度少年兴起“死亡飞车”游戏"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/imageNewsPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:text="1/6"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#00FF0000" >

            <TextView
                android:id="@+id/imageNewsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FF0000"
                android:lineSpacingMultiplier="1.2"
                android:text="印度北方邦首都勒克瑙(Lucknow)市青少年中兴起一种&apos;死亡飞车&apos;游戏，这些人沿着铁路大桥在疾驰的列车前奔跑，直到火车即将撞上他们数秒前才会跳入河中远离铁轨,比如谁将成为最后一个跳入水中的人。"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp" />
        </ScrollView>
    </LinearLayout>

</FrameLayout>